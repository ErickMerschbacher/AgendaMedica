@model IEnumerable<AgendaMedica.Models.Agenda>

@{
	ViewData["Title"] = "Agenda";
}

<h1 class="text-light"><i class="bi bi-calendar2-check-fill"></i>Agendamento</h1>

<p>
	<a asp-action="Create" class="btn btn-outline-light btn-lg w-25 "><i class="bi bi-plus-circle"></i>Adicionar</a>
</p>
<table class="table table-dark table-striped table-borderless">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Medico)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Paciente)
			</th>
			<th>
				Data Da Consulta
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Status)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Medico.Nome)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Paciente.Nome)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.DataConsulta)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Status)
				</td>
				<td>
					<a class="btn btn-light btn-sm" asp-action="Edit" asp-route-id="@item.AgendaId"><i class="bi bi-pencil-square"></i>Edit</a> |
					<a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.AgendaId"><i class="bi bi-trash2"></i>Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>
