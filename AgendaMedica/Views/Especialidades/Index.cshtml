@model IEnumerable<AgendaMedica.Models.Especialidade>

@{
	ViewData["Title"] = "Especialidade";
}

<h1 class="text-light"><i class="bi bi-virus"></i>Especialidade</h1>
<div class="container text-light">
	<h1>Cadastro de <span class="fw-bold"> Especialidade</span></h1>

	<p>
		<a asp-action="Create" class="btn btn-outline-light btn-lg w-25 "><i class="bi bi-plus-circle"></i>Adicionar</a>
	</p>
	<table class="table table-dark table-striped table-borderless">
		<thead>
			<tr>
				<th>
					@Html.DisplayNameFor(model => model.Nome)
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.Nome)
					</td>
					<td>
						<a class="btn btn-light btn-sm" asp-action="Edit" asp-route-id="@item.EspecialidadeId"><i class="bi bi-pencil-square"></i>Edit</a> |
						<a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.EspecialidadeId"><i class="bi bi-trash2"></i>Delete</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
