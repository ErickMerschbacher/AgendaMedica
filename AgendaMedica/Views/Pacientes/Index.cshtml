@model IEnumerable<AgendaMedica.Models.Paciente>

@{
	ViewData["Title"] = "Cadastro de Pacientes";
}

<div class="container text-light">
	<h1><i class="bi bi-people-fill"></i>Cadastro de <span class="fw-bold"> Pacientes</span></h1>

	<p>
		<a asp-action="Create" class="btn btn-outline-light btn-lg w-25 "><i class="bi bi-plus-circle"></i>Adicionar</a>
	</p>
	<table class="table table-dark table-striped table-borderless">
		<thead>
			<tr>
				<th class="bg-dark">
					Prontuário
				</th>
				<th class="bg-dark">
					@Html.DisplayNameFor(model => model.Nome)
				</th>
				<th class="bg-dark">
					@Html.DisplayNameFor(model => model.CPF)
				</th>
				<th class="bg-dark">
					Data De Nascimento
				</th>
				<th class="bg-dark">
					@Html.DisplayNameFor(model => model.Celular)
				</th>
				<th class="bg-dark">
					E-Mail
				</th>
				<th class="bg-dark"></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.Prontuario)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Nome)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.CPF)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.DataNascimento)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Celular)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Email)
					</td>
					<td>
						<a class="btn btn-light btn-sm" asp-action="Edit" asp-route-id="@item.PacienteId"><i class="bi bi-pencil-square"></i>Editar</a> |
						<a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.PacienteId"><i class="bi bi-trash2"></i>Excluir</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>
